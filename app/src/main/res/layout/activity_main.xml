<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dub"
        android:paddingRight="325dp"
        android:text="Dubstep" />

    <Button
        android:id="@+id/extre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dub"
        android:paddingRight="269dp"
        android:text="Extreme Action" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/high"
        android:layout_below="@id/extre"
        android:paddingRight="294dp"
        android:text="High Octane" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/end"
        android:layout_below="@id/high"
        android:paddingRight="269dp"
        android:text="Endless Motion" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rock"
        android:layout_below="@id/end"
        android:paddingRight="300dp"
        android:text="Happy Rock" />

</RelativeLayout>